<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/black"
    tools:context="example.com.sampleapptab.tv.channels.view.ChannelsFragment">

    <LinearLayout
        android:layout_centerInParent="true"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <RelativeLayout
            android:id="@+id/channelListPreviewRL"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <TextView
                android:id="@+id/liveTvTitleTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:text="LIVE TV/ALL/BY NUMBER"
                android:textAllCaps="true"
                android:textColor="@android:color/white"
                android:textSize="15sp" />

            <android.support.v7.widget.RecyclerView
                android:id="@+id/channelListRV"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_above="@+id/channelCountTV"
                android:layout_below="@id/liveTvTitleTV">

            </android.support.v7.widget.RecyclerView>

            <TextView
                android:id="@+id/channelCountTV"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:text="PAGE 1 OF 1. FOUND 2 CHANNELS."
                android:textAllCaps="true"
                android:textColor="@android:color/white"
                android:textSize="12sp" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/channelPreviewRL"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <VideoView
                android:id="@+id/channelPreviewVV"
                android:layout_width="match_parent"
                android:layout_height="300dp" />
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/bottomLL"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/channel_background_color"
        android:orientation="horizontal"
        android:padding="25dp">

        <RelativeLayout
            android:id="@+id/viewRL"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:layout_weight="1"
            android:background="@android:color/darker_gray">

            <ImageView
                android:layout_width="15dp"
                android:layout_height="15dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="View"
                android:textAllCaps="true" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/sortRL"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:layout_weight="1"
            android:background="@android:color/darker_gray">

            <ImageView
                android:layout_width="15dp"
                android:layout_height="15dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sort"
                android:textAllCaps="true" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/favoriteRL"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:layout_weight="1"
            android:background="@android:color/darker_gray">

            <ImageView
                android:layout_width="15dp"
                android:layout_height="15dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Favorite"
                android:textAllCaps="true" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/moveRL"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:layout_weight="1"
            android:background="@android:color/darker_gray">

            <ImageView
                android:layout_width="15dp"
                android:layout_height="15dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Move"
                android:textAllCaps="true" />
        </RelativeLayout>
    </LinearLayout>
</RelativeLayout>