<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/text_margin"
    android:background="@android:color/black"
    tools:context="example.com.sampleapptab.settings.SettingsFragment">

    <TextView
        android:id="@+id/macIdTitleTV"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="@android:color/white"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/macId" />

    <TextView
        android:id="@+id/macIdTV"
        android:textSize="12sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@android:color/white"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/macIdTitleTV"
        android:text="11:00:99:00:99:99"
        />

</RelativeLayout>
